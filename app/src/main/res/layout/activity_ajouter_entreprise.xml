<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ajouter_entreprise"
    android:orientation="vertical">




    <EditText
        android:id="@+id/raiss"
        style="@style/zonesaisie"
        android:hint="Tapez votre raison social..." />

    <EditText
        android:id="@+id/addre"
        style="@style/zonesaisie"
        android:hint="Tapez votre adress..." />

    <EditText
        android:id="@+id/cap"
        style="@style/zonesaisie"
        android:hint="Tapez votre capital..."
        android:inputType="numberDecimal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            style="@style/btn"

            android:onClick="ajouterEntreprise"
            android:text="@string/sauvgarder" />

        <Button
            style="@style/btn"
android:id="@+id/btn_an"
android:onClick="annuler_form"

            android:text="@string/annuler"/>
    </LinearLayout>


</LinearLayout>